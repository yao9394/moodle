{{!
    @template core/tabtree

    Tab tree.

    Example context (json):
    {
        "tabs": [{
            "active": "true",
            "inactive": "false",
            "link": [{
                "link": "http://moodle.org"
            }],
            "title": "Moodle.org",
            "text": "Moodle community"
        }]
    }
}}
<ul class="nav nav-tabs mb-3" role="tablist">
  {{#tabs}}
    <li class="nav-item">
      <a class="nav-link{{#active}} active{{/active}}{{#inactive}} disabled{{/inactive}}" aria-selected="{{#active}}true{{/active}}{{^active}}false{{/active}}" {{#link}}href="{{{link}}}"{{/link}} title="{{title}}" role="tab" aria-contorls="{{label}}-tab" id="{{label}}">{{{text}}}</a>
    </li>
  {{/tabs}}
</ul>
{{#secondrow}}
  {{>core/tabtree}}
{{/secondrow}}
